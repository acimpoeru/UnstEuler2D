#include <stdio.h>
#include "gradient.h"
#

//calculates gradients using Divergence theorem.
int grad_2nd_order(double *Q, int neqs, double *area, double *x, double *y, int *bn_nodes, int nn, int nt, int **tri_conn, int nnz, int *ia, int *ja, double *grad)
{

  //locals
  int i, j, k;
  double nx, ny;
  int j_start, j_end;

  //resetting the gradient
  for( i = 0; i < nn; i++)
    for( j = 0; j < neqs; j++)
      for( k = 0; k < 2; k++)
	grad[i*neqs*2+j*2+k] = 0.;

  //main loop over nodes this time
  for ( i = 0; i < nn ; i++)
    {

      for ( j = j_start; j < j_end ; j++)
	{
	  nx = y[ja[j+1]] - y[ja[j]];
	  ny = -(x[ja[j+1]] - x[ja[j]]);

  
   

	}

    }

  //completed successfully!
  return 0;

}
